<%- include("../includes/header.ejs", {title: "Update SKill Info"}); %>

<h1>Update <%= skill.skill_name + " " + skill.description %></h1>
<form action="/skill/update" method="get">
    <input type="hidden" id="skill_id" name="skill_id" value="<%= skill.skill_id %>">
    Skill Name: <input id="skill_name" name="skill_name" type="text" value="<%= skill.skill_name%>"/>
    <br />
    Description: <input id="description" name="description" type="text" value="<%= skill.description%>"/>
    <br />
    <br />

    <input type="submit" />

</form>

